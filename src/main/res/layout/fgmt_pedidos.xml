<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/contenedor_tipo_pedidos"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="200dp"
        android:layout_height="30dp">

        <View
            android:id="@+id/vIndicadorSwitch"
            android:layout_width="100dp"
            android:background="@android:drawable/button_onoff_indicator_on"
            android:layout_height="match_parent" />

        <TextView
            android:text="Ventas"
            android:id="@+id/lblVentas"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lblCompras"
            android:text="Compras"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listaPedidos"
        android:layout_below="@id/contenedor_tipo_pedidos"
        android:layout_above="@id/navegador"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navegador"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/navb_pedidos" />

</RelativeLayout>